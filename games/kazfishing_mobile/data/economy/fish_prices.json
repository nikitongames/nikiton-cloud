{
  "pricing_model": {
    "formula": "base_price = weight_kg * price_per_kg * rarity_modifier * trophy_bonus",
    "rarity_modifiers": {
      "common": 1.0,
      "uncommon": 1.2,
      "rare": 1.5,
      "legendary": 2.2
    },
    "trophy_bonus_range": [1.0, 3.5],
    "weight_scaling": "nonlinear",
    "tax_rate": 0.05
  },

  "market_factors": {
    "event_multiplier": 1.0,
    "donator_bonus": 1.25,
    "premium_pass_bonus": 1.15,
    "weather_effects": {
      "rain": 0.9,
      "sunny": 1.0,
      "night": 1.1,
      "storm": 0.8
    }
  },

  "examples": {
    "roach": {
      "rarity": "common",
      "base_price_per_kg": 2,
      "average_income_per_fish": 6,
      "max_income_trophy": 30,
      "notes": "Мелкая рыба, массовая добыча, подходит для ежедневных заданий."
    },
    "catfish": {
      "rarity": "rare",
      "base_price_per_kg": 10,
      "average_income_per_fish": 250,
      "max_income_trophy": 2500,
      "notes": "Трофейная донная рыба. Приносит высокий доход и рейтинг."
    },
    "arapaima": {
      "rarity": "legendary",
      "base_price_per_kg": 30,
      "average_income_per_fish": 800,
      "max_income_trophy": 8000,
      "notes": "Самая дорогая пресноводная рыба. Доступна только в Амазонке."
    }
  },

  "trophy_thresholds": {
    "small": 0.8,
    "medium": 1.2,
    "large": 2.0,
    "trophy": 3.0
  },

  "region_modifiers": {
    "kazakhstan": 1.0,
    "north": 1.1,
    "mountain": 1.2,
    "tropical": 1.4
  },

  "taxation": {
    "market_fee": 0.05,
    "guild_tax": 0.03,
    "player_net_gain_formula": "gross_income * (1 - market_fee - guild_tax)"
  },

  "notes": "Модель динамического рынка. Итоговая цена зависит от веса, редкости, погодных условий и бонусов игрока."
}
